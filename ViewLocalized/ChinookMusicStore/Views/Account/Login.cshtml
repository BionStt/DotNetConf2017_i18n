@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Home"] = Localizer["Home"];
    ViewData["About"] = Localizer["About"];
    ViewData["Contact"] = Localizer["Contact"];
    ViewData["Register"] = Localizer["Register"];
    ViewData["Login"] = Localizer["Login"];
    ViewData["AboutUs"] = Localizer["AboutUs"];
    ViewData["CreateAccount"] = Localizer["CreateAccount"];
    ViewData["Email"] = Localizer["Email"];
    ViewData["Password"] = Localizer["Password"];
    ViewData["ForgotPassword"] = Localizer["ForgotPassword"];
    ViewData["RegisterNew"] = Localizer["RegisterNew"];
    ViewData["LocalAcount"] = Localizer["LocalAcount"];
    ViewData["RememberMe"] = Localizer["RememberMe"];
}
<br />
<h2>@ViewData["Login"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4>@ViewData["LocalAcount"]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email">@ViewData["Email"]</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">@ViewData["Password"]</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe) 
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">@ViewData["Login"]</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">@ViewData["ForgotPassword"]</a>
                    </p>
                    <p>
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@ViewData["RegisterNew"]</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
