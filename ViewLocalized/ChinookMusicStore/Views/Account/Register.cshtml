@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model RegisterViewModel
@{
    ViewData["Home"] = Localizer["Home"];
    ViewData["About"] = Localizer["About"];
    ViewData["Contact"] = Localizer["Contact"];
    ViewData["Register"] = Localizer["Register"];
    ViewData["Login"] = Localizer["Login"];
    ViewData["AboutUs"] = Localizer["AboutUs"];
    ViewData["CreateAccount"] = Localizer["CreateAccount"];
    ViewData["Email"] = Localizer["Email"];
    ViewData["Password"] = Localizer["Password"];
    ViewData["ConfirmPassword"] = Localizer["ConfirmPassword"];
}
<br />
<h2>@ViewData["Register"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>@ViewData["CreateAccount"]</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>@ViewData["Email"]</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >@ViewData["Password"]</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >@ViewData["ConfirmPassword"]</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">@ViewData["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
